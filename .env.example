# Environment Configuration for Trip Planner Platform
# Copy this file to .env and update with your values

# Environment (development|production)
ENVIRONMENT=production

# Database Configuration
DB_USER=trip_planner_user
DB_PASSWORD=changeme-use-secure-password
DB_NAME=trip_planner

# Redis Configuration
REDIS_PASSWORD=changeme-use-secure-password

# JWT Configuration
JWT_SECRET=changeme-use-secure-secret-at-least-32-chars
JWT_ISSUER=trip-planner

# External Services
MAPBOX_API_KEY=pk.your-mapbox-api-key-here

# API Configuration
PORT=8080
CDN_URL=http://localhost:8080
ALLOWED_ORIGINS=http://localhost,http://localhost:3000

# Frontend Configuration
VITE_API_URL=http://localhost/api/v1
VITE_WS_URL=ws://localhost
VITE_MAPBOX_TOKEN=pk.your-mapbox-api-key-here

# Optional: Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
SMTP_FROM_EMAIL=noreply@tripplanner.com
SMTP_FROM_NAME=Trip Planner

# Optional: Monitoring
SENTRY_DSN=
LOG_LEVEL=info

# For Render.com deployment, these will be set automatically:
# DATABASE_URL - PostgreSQL connection string
# REDIS_URL - Redis connection string
# INTERNAL_REDIS_URL - Internal Redis connection string