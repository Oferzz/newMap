# Server Configuration
PORT=8080
ENVIRONMENT=development
SERVER_READ_TIMEOUT=15s
SERVER_WRITE_TIMEOUT=15s

# Database Configuration
# For local MongoDB:
# MONGODB_URI=mongodb://localhost:27017
# For MongoDB Atlas (replace <db_password> with your actual password):
MONGODB_URI=mongodb+srv://admin:<db_password>@cluster0.5ewqy.mongodb.net/?retryWrites=true&w=majority&appName=Cluster0
DB_NAME=trip_platform
DB_MAX_POOL_SIZE=100
DB_MIN_POOL_SIZE=10
DB_MAX_CONN_IDLE_TIME=10m

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_MAX_RETRIES=3
REDIS_POOL_SIZE=10

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=168h
JWT_ISSUER=trip-platform

# App Configuration
MAX_UPLOAD_SIZE=10485760
RATE_LIMIT_PER_MIN=60

# Mapbox Configuration
MAPBOX_ACCESS_TOKEN=your-mapbox-access-token-here
MAPBOX_STYLE_URL=mapbox://styles/mapbox/streets-v11

# Google Places API (optional)
GOOGLE_PLACES_API_KEY=your-google-places-api-key-here

# AWS S3 Configuration (for media uploads)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=trip-platform-media

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
SMTP_FROM_EMAIL=noreply@tripplatform.com
SMTP_FROM_NAME=Trip Platform

# Sentry Configuration (for error tracking)
SENTRY_DSN=your-sentry-dsn-here

# Socket.io Configuration
SOCKETIO_PATH=/socket.io
SOCKETIO_CORS_ORIGIN=http://localhost:3000

# OAuth Configuration (optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Cloudflare Configuration
CLOUDFLARE_API_KEY=your-cloudflare-api-key
CLOUDFLARE_ZONE_ID=your-cloudflare-zone-id

# Monitoring
PROMETHEUS_METRICS_PATH=/metrics
PROMETHEUS_METRICS_PORT=9090